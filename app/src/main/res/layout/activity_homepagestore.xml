<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepagestore"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="350dp"
            android:layout_marginRight="237dp"
            android:background="@drawable/shopping" />

        <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:hint="بحث"
            android:textSize="25dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginRight="367dp"
            android:background="@drawable/loupe" />

    </RelativeLayout>
    *****************************************
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="55dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_marginRight="30dp"
            >
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="8dp"
                android:layout_margin="10dp">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/immg"
                    android:onClick="truck" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/truck"
                android:layout_marginLeft="10dp"
                android:textSize="11dp"
                android:textColor="#DAA520"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="8dp"
                android:layout_margin="10dp">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mechanic"
                    android:onClick="mechanic" />


            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/mecanic"
                android:textColor="#DAA520"
                android:layout_marginLeft="10dp"
                android:textSize="11dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="8dp"
                android:layout_margin="10dp">


                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/sarch_icon"
                    android:onClick="searchPart" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:textSize="11dp"
                android:textColor="#DAA520"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    *********************************

    **********************************
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/homee"
            android:onClick="home" />

        <ImageButton
            android:id="@+id/order"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/order"
            android:onClick="orders" />

        <ImageButton
            android:id="@+id/personal"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/user"
            android:onClick="user" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="222dp">


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">


    </RelativeLayout>



</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>