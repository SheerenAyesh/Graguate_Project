<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepagestore"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:id="@+id/welcome"
        />




    *****************************************
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_marginRight="30dp"
            >
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="8dp"
                android:layout_margin="10dp">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/immg"
                    android:onClick="truck" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/truck"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"
                android:textColor="#DAA520"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="8dp"
                android:layout_margin="10dp">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mechanic"
                    android:onClick="mechanic" />


            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/mecanic"
                android:textColor="#DAA520"
                android:layout_marginLeft="10dp"
                android:textSize="22dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="8dp"
                android:layout_margin="10dp">


                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/sarch_icon"
                    android:onClick="searchPart" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:textSize="22dp"
                android:textColor="#DAA520"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    *********************************

    **********************************
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_dark_background"
        android:id="@+id/notification"
        android:layout_marginRight="15dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reqPage"
        android:text="انقر هنا لرؤية الطلبات"
        android:textSize="20dp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_marginTop="79dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/homee"
            android:onClick="home" />


        <ImageButton
            android:id="@+id/cart"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/shopping_cart"
            android:onClick="cart" />

        <ImageButton
            android:id="@+id/ordermec"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/order"
            android:onClick="orders_mec" />

        <ImageButton
            android:id="@+id/ordertruck"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="230dp"

            android:background="@drawable/truckimg"
            android:onClick="orders_truck" />

        <ImageButton
            android:id="@+id/personal"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/user"
            android:onClick="user" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="222dp">


    </RelativeLayout>





</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>