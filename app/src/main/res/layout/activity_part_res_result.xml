<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".partResResult">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="اسم مالك القطعة"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:id="@+id/username"/>
            <TextView
                android:layout_width="100dp"

                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="اسم مالك القطعة :"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="اسم القطعة:"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:id="@+id/partname"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="اسم القطعة :" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="رقم القطعة "
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:id="@+id/partnumber"/>
            <TextView
                android:layout_width="100dp"

                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="رقم القطعة :"
                />
        </TableRow>





        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="موديل القطعة"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:id="@+id/model"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="موديل القطعة:" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="وصف القطعة"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:id="@+id/desc"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="وصف القطعة" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="السعر:"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:id="@+id/price"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="السعر :" />
        </TableRow>


    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:id="@+id/result"
        android:textColor="@color/purple_700"
        android:textAlignment="center"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="حذف الطلب"
        android:onClick="delete"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColorLink="@color/purple_700"
        android:textAllCaps="true"
        android:textColorHighlight="@color/teal_200"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:id="@+id/result_delete"
        android:textColor="@color/purple_700"
        android:textAlignment="center"
        />

</androidx.appcompat.widget.LinearLayoutCompat>