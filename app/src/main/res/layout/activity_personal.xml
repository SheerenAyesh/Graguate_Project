<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D3D4"
    tools:context=".personal"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/infooo"
                android:foregroundGravity="center" />

            <EditText
                android:id="@+id/email"
                android:layout_width="299dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFFFF"
                android:text="البريد الالكتروني"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="299dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFFFF"
                android:text="الاسم الاول"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="299dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFFFF"
                android:text="الاسم الاخير"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="299dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFFFF"
                android:text="كلمة المرور"
                android:password="true"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/city"
                android:layout_width="299dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFFFF"
                android:text="المدينة"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/street"
                android:layout_width="299dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFFFF"
                android:text="الشارع"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="25dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:hint="نوع الحساب "
                android:textColorHint="@color/black"

                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="متجر"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <RadioButton
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onRadioButtonClicked"
                    android:text="مستخدم"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

            </RadioGroup>

            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:onClick="updateuser"
                android:text="تحديث"
                android:textColor="@color/white"
                android:textSize="22dp" />

<!--            <Button-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:onClick="logout"-->
<!--                android:text="تسجيل الخروج" />-->

        </LinearLayout>
    </ScrollView>
</LinearLayout>