<?xml version="1.0" encoding="utf-8"?>
 <androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".searchpart"
    android:background="#D0D3D4"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp">
 <Button
     android:layout_margin="8dp"
     android:layout_width="160dp"
     android:layout_height="60dp"
     android:hint="اضافة قطعة"
     android:textColorHint="@color/white"
     android:textSize="20dp"
     android:textColor="@color/white"
     android:textStyle="bold"
     android:id="@+id/seachpart"
     android:onClick="addpart"/>

 <Button
     android:layout_margin="8dp"
     android:layout_width="160dp"
     android:layout_height="60dp"
     android:layout_marginLeft="8dp"
     android:hint="البحث عن قطعة"
     android:textColorHint="@color/white"
     android:textSize="20dp"
     android:textStyle="bold"
     android:onClick="search"/>
    </LinearLayout>

 <androidx.recyclerview.widget.RecyclerView
     android:id="@+id/recyclerView"
     android:layout_width="300dp"
     android:layout_marginLeft="50dp"
     android:layout_height="500dp" />


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
  >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:layout_marginTop="110dp"
         android:background="#B3B6B7">

         <ImageButton
             android:id="@+id/home"
             android:layout_width="46dp"
             android:layout_height="51dp"
             android:layout_marginLeft="10dp"
             android:background="@drawable/homee"
             android:onClick="home" />


         <ImageButton
             android:id="@+id/cart"
             android:layout_width="46dp"
             android:layout_height="51dp"
             android:layout_marginLeft="80dp"
             android:background="@drawable/shopping_cart"
             android:onClick="cart" />

         <ImageButton
             android:id="@+id/ordermec"
             android:layout_width="48dp"
             android:layout_height="49dp"
             android:layout_marginLeft="150dp"
             android:background="@drawable/order"
             android:onClick="orders_mec" />

         <ImageButton
             android:id="@+id/ordertruck"
             android:layout_width="48dp"
             android:layout_height="49dp"
             android:layout_marginLeft="230dp"

             android:background="@drawable/truckimg"
             android:onClick="orders_truck" />

         <ImageButton
             android:id="@+id/personal"
             android:layout_width="51dp"
             android:layout_height="51dp"
             android:layout_marginLeft="320dp"
             android:background="@drawable/user"
             android:onClick="user" />

     </RelativeLayout>


</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>