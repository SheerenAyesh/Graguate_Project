<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D0D3D4"
    tools:context=".ApproveOrRejecttruckReq">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="لرفض او قبول الطلب اضغط على الزر المناسب"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="رفض الطلب"
            android:textStyle="bold"
            android:onClick="reject"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="قبول الطلب"
            android:textStyle="bold"
            android:onClick="approve"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/res"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="415dp"
        android:background="#B3B6B7">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/homee"
            android:onClick="home" />


        <ImageButton
            android:id="@+id/cart"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/shopping_cart"
            android:onClick="cart" />

        <ImageButton
            android:id="@+id/ordermec"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/order"
            android:onClick="orders_mec" />

        <ImageButton
            android:id="@+id/ordertruck"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginLeft="230dp"

            android:background="@drawable/truckimg"
            android:onClick="orders_truck" />

        <ImageButton
            android:id="@+id/personal"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/user"
            android:onClick="user" />

    </RelativeLayout>



</androidx.appcompat.widget.LinearLayoutCompat>