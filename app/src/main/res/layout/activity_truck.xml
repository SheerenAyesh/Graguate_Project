<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".truck"
    android:background="#D0D3D4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/button2"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/white"
            android:layout_marginTop="8dp"
            android:hint="أقرب شاحنة نقل"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="nearest"
            />


        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:textColorHint="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/truck"
            android:background="@drawable/shap"
            android:hint="تسجيل كشاحنة للنقل  "
            android:onClick="truuck"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listtruck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listmec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forguest">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="600dp"
            android:background="#B3B6B7">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="46dp"
                android:layout_height="51dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/homee"
                android:onClick="home" />


            <ImageButton
                android:id="@+id/cart"
                android:layout_width="46dp"
                android:layout_height="51dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/shopping_cart"
                android:onClick="cart" />

            <ImageButton
                android:id="@+id/ordermec"
                android:layout_width="48dp"
                android:layout_height="49dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/order"
                android:onClick="orders_mec" />

            <ImageButton
                android:id="@+id/ordertruck"
                android:layout_width="48dp"
                android:layout_height="49dp"
                android:layout_marginLeft="230dp"
                android:background="@drawable/truckimg"
                android:onClick="orders_truck" />

            <ImageButton
                android:id="@+id/personal"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_marginLeft="320dp"
                android:background="@drawable/user"
                android:onClick="user" />

        </RelativeLayout>


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>