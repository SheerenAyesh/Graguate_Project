<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D0D3D4"
    tools:context=".cart">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="صفحة الطلبات التي لديك"
        android:textColor="@color/black"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="طلبات الميكانيكي:"
        android:textColor="@color/black"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meclist"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="طلبات الترك:"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trucklist"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="طلبات القطع:"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/recyclerView"
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:layout_height="400dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#B3B6B7"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="46dp"
            android:layout_height="51dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/homee"
            android:onClick="home" />

        <ImageButton
            android:id="@+id/order"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/order"
            android:onClick="orders" />

        <ImageButton
            android:id="@+id/personal"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="290dp"
            android:background="@drawable/user"
            android:onClick="user" />

    </RelativeLayout>
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>